{% extends 'main.html.twig' %}
{% block customcss %}
    <style>
        .extrasmall {font-size:10px;}
        .today_class {background-color:green;color:#fff;}
        .everyday_class {}
    </style>
{% endblock %}
{% block moduletitle %}{{ title }}{% endblock %}
{% block main %}
    {% set today_session=0 %}
    {% set today_type=0 %}
    <div style="margin:auto;">
{#        <a class="btn btn-outline-success" href='/hr/report/monthlyreport/'>Monthly report</a> -->#}
        <a class="btn btn-outline-success" href='/hr/report/dailyreport/'>Today report</a>
        <h3>{{ title }}</h3>
            {{ content|raw }}
            <br><br>Generated by Campus at IUHD
    </div>
{% endblock %}
{% block customjs %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#mainTable').DataTable({
                dom: 'Bfrtip',
                lengthMenu: [
                    [10, 25, 50, -1],
                    ['10 rows', '25 rows', '50 rows', 'Show all']
                ],
                iDisplayLength: -1,
                buttons: [
                    'pageLength', 'copy', 'excel', 'pdf'
                ]
            });
        });
    </script>
{% endblock %}