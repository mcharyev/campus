{% extends 'main.html.twig' %}

{% block moduletitle %} Information Text Form{% endblock %}
{% block main %}
    <div style="width:90%;margin:auto;"><h3>Information Text Form</h3></div>
    <div style="width:90%;margin:auto;">
        {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Create / Update</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block customjs %}
    <script src="/build/ckeditor/ckeditor.js"></script>
    <script>
        jQuery(document).ready(function () {
        
        
        ClassicEditor
                .create(document.querySelector('#information_text_form_content'), {
        //                toolbar: [ 'heading', '|', 'bold', 'italic', 'link' ],
                })
                .then(editor => {
                window.editor = editor;
                })
                .catch(err => {
                console.error(err.stack);
                });
        });
    </script>
{% endblock %}{# empty Twig template #}
