{% extends 'main.html.twig' %}

{% block moduletitle %} ERDU Elektron resminama formasy{% endblock %}
{% block main %}
    <div style="width:90%;margin:auto;">
        <h3>
            {% if entry_type=='1' %}
                Gelýän hat
            {% elseif entry_type=='2' %}
                Gidýän hat
            {% elseif entry_type=='3' %}
                Içerki hat
            {% endif %}
        </h3>
    </div>
    <div style="width:90%;margin:auto;">
        {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">
            {% if edit_type=='new' %}
                Döret
            {% else %}
                Ýatda sakla
            {% endif %}
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
