                    {% for z in 9..29 %}
                        {% if universityTotalSums[z]==0 %}
                            {% set colorclass="low" %}
                        {% else %}
                            {% set colorclass="normal" %}
                        {% endif %}
                        <td class="{{ colorclass }}">{{ universityTotalSums[z] }}</td>
                    {% endfor %}
                </tr>
            </tbody>
        </table>
